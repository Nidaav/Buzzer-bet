<div class="container-home">
  <div class="container-league-home">
    <h1><%= @league.name %></h1>
  </div>
  <div class="affiche">
    <div class="container-info_match">
      <div class="first_player">
        <%= cl_image_tag current_user.photo.key, crop: :thumb, width: 75, height: 75 %>
      </div>
      <div class="versus">
        <p><%= @game.date.strftime('%H:%M')%></p>
        <h1>VS</h1>
        <p><%= @game.date.strftime('%d/%m')%></p>
      </div>
      <div class="second_player">
        <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 75, height: 75  %>
      </div>

</div>
<div class="container-results">
  <div class="container-games-result">
    <div class="winning-team-game-result">
      <h1>WINNING TEAM</h1>
      <div class="logo-winning-team-game-result">
        <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 40, height: 40, class: "#{'winning-bet' if @winner1 == @game.winner}" %>
        <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 75, height: 75, class: 'logo-winner'  %>
        <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 40, height: 40, class: "#{'winning-bet' if @winner2 == @game.winner}" %>
      </div>
      <p><%= @game.winner %></p>
    </div>

    <div class="top-game-result">
      <h1>TOP SCORER</h1>
      <h2><%= @game.top_scorer %></h2>
      <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, :class => "star_img" %>


      <div class="player-name-onbet"> You </div>
      <div class="actual-bets actual-bets1 <%='winning-bet'if @top_scorer1 == @game.top_scorer%>">        <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, crop: :thumb, width: 30, height: 30 %><%= @bet_one.top_scorer %>
      <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 30, height: 30 %></div>


      <div class="player-name-onbet"><%= @other_player.username %></div>
      <div class="actual-bets actual-bets2 <%='winning-bet'if @top_scorer2 == @game.top_scorer%>">        <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, crop: :thumb, width: 30, height: 30 %><%= @bet_two.top_scorer %>
      <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 30, height: 30 %></div>
    </div>

    <div class="top-game-result">
      <h1>TOP PASSER</h1>
      <h2><%= @game.top_passer %></h2>
      <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, :class => "star_img" %>


     <div class="player-name-onbet"> You </div>
      <div class="actual-bets actual-bets1 <%='winning-bet' if @top_passer1 == @game.top_passer%>">        <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, crop: :thumb, width: 30, height: 30 %><%= @bet_one.top_scorer %><%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 30, height: 30 %>
      </div>


      <div class="player-name-onbet"><%= @other_player.username %></div>
      <div class="actual-bets actual-bets2 <%='winning-bet' if @top_passer2 == @game.top_passer%>">        <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, crop: :thumb, width: 30, height: 30 %><%= @bet_two.top_scorer %><%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 30, height: 30 %>
      </div>
    </div>

    <div class="top-game-result">
      <h1>TOP REBOUNDER</h1>
      <h2><%= @game.top_rebounder %></h2>
      <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, :class => "star_img" %>


      <div class="player-name-onbet"> <%= current_user.username %></div>
      <div class="actual-bets actual-bets1 <%='winning-bet' if @top_rebounder1 == @game.top_rebounder%>">        <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, crop: :thumb, width: 30, height: 30 %><%= @bet_one.top_scorer %><%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 30, height: 30 %>
      </div>


      <div class="player-name-onbet"><%= @other_player.username %></div>
      <div class="actual-bets actual-bets2<%='winning-bet' if @top_rebounder2 == @game.top_rebounder%>">        <%= image_tag Team.find_by(name: @game.team1.name).players.sample.photo_url, crop: :thumb, width: 30, height: 30 %><%= @bet_two.top_scorer %><%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 30, height: 30 %>
      </div>
    </div>

    <div class="total-points-game-result">
      <h1>TOTAL POINTS</h1>
      <br>
      <br>
      <div class="bet-pts-1 <%='winning-bet' if (@total_pts1 - @game.total_points) < (@total_pts2 - @game.total_points)%>"><%= @total_pts1 %></div>
        <div class="bar-container"><div class="centered-pts1 <%='winning-bet-bar' if (@total_pts1 - @game.total_points) < (@total_pts2 - @game.total_points)%>"></div><div class="centered-pts2 <%='winning-bet-bar' if (@total_pts2 - @game.total_points) < (@total_pts1 - @game.total_points)%>"></div></div>
        <div class="total-pts-result"><%= @game.total_points %></div>
      <div class="bet-pts-2 <%='winning-bet' if (@total_pts2 - @game.total_points) < (@total_pts1 - @game.total_points)%>"><%= @total_pts2 %></div>
    </div>
    <br>

    <div class="gap-points-game-result">
      <h1>GAP POINTS</h1>
      <br>
      <br>
      <div class="gap-pts-1 <%='winning-bet' if (@gap_pts1 - @game.gap_points) < (@gap_pts2 - @game.gap_points)%>"> <%= @gap_pts1 %></div>
        <div class="bar-container"><div class="centered-pts1 <%='winning-bet-bar' if (@gap_pts1 - @game.gap_points) < (@gap_pts2 - @game.gap_points)%>"></div><div class="centered-pts2 <%='winning-bet-bar' if (@gap_pts2 - @game.gap_points) < (@gap_pts1 - @game.gap_points)%>"></div></div>
        <div class="total-pts-result"><%= @game.gap_points %></div>
      <div class="bet-pts-2 <%='winning-bet' if (@gap_pts2 - @game.gap_points) < (@gap_pts1 - @game.gap_points)%>"> <%= @gap_pts2 %></div>
    </div>
    <br>
    <div class="winning-player-game-result">
      <h1>WINNING PLAYER</h1>
      <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 40, height: 40  %>
      <%= cl_image_tag @other_player.photo.key, crop: :thumb, width: 75, height: 75  %>
    <button class="btn btn-primary">See the rankikg</button>
    </div>

  </div>
</div>
